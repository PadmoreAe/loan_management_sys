<%= form_with(model: payout, local: true) do |form| %>
  <% if payout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payout.errors.count, "error") %> prohibited this payout from being saved:</h2>

      <ul>
        <% payout.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col-3">
    <%= form.label :investor_id %>
    <%= collection_select(:payout, :investor_id, Investor.all, :id, :first_name, {:selected => payout.investor_id}, { class: "form-control" } ) %>
  </div>

  <div class="field col-3">
    <%= form.label :contribution_id %>
    <%= collection_select(:payout, :contribution_id, Contribution.all, :id, :principal, {:selected => payout.contribution_id}, { class: "form-control" } ) %>
  </div>

  <div class="field col-3">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: "form-control" %>
  </div>

  <div class="field col-3">
    <%= form.label :date %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

   <div class="field col-3">
    <%= form.label :notes %>
    <%= form.text_field :notes, class: "form-control" %>
  </div>
  <br />

  <div class="actions col-3">
    <%= form.submit "Submit", class: "btn btn-primary"%>
  </div>
<% end %>
