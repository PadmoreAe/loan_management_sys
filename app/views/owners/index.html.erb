




<div class="container-fluid">

<p id="notice"><%= notice %></p>

<h1>Owners</h1>

<%= link_to 'Add New Owner', new_owner_path, class: "btn btn-warning"%><br /><br />

<input id="myInputTextFielddd" type="text" class="form-control" placeholder="Search Loaners"><br /><br />



<table class="table" id="loaners-table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Address</th>
      <th></th> 
      <th></th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.phone_number %></td>
        <td><%= owner.email %></td>
        <td><%= owner.address %></td>
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path %>

<% content_for :page_scripts do %>
  <script>
    function readyy(){
      let oTable = $('#loaners-table').DataTable({ pageLength: 50}); 
      $('#myInputTextFielddd').keyup(function(){
          oTable.search($(this).val()).draw() ;
      })
    }
    $(document).ready(readyy)
  </script>

<% end %>
</div>