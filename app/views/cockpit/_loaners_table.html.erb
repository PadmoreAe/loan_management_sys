
<div class="card">
  <div class="card-header border-0">
    <div class="row align-items-center">
      <div class="col">
        <h3 class="mb-0">Recent Loaners</h3>
      </div>
      <div class="col text-right">
        <a href="/investors" class="btn btn-sm btn-primary">All Loaners</a>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <!-- Projects table -->
    <table class="table align-items-center table-flush">
      <thead class="thead-light">
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Phone Number</th>
          <th scope="col">Loans</th>
        </tr>
      </thead>
      <tbody>
        <% loaner.each do |loaner| %>
        <tr>
          <th scope="row">
            <%= loaner.first_name %>
          </th>
          <td>
            <%= loaner.last_name %>
          </td>
          <td>
            <%= loaner.phone_number %>
          </td>
          <td>
            <%= loaner.loans.count %>
          </td>
        </tr>
        <% end %>
     
      </tbody>
    </table>
  </div>
</div>
